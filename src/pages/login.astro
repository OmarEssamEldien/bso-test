---
import Layout from "../layouts/Layout.astro";
---

<Layout>
    <div class="row justify-content-center">
        <div class="col-lg-4">
            <form id="loginForm" method="post">
                <h1 class="h3 mb-3 fw-normal d-flex">Please sign in <img class="mb-4 ms-auto" src="/assets/img/icon-account.svg" width="40"></h1>
            
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="identifier" name="identifier" placeholder="JohnDoe" autofocus>
                    <label for="identifier">Username or Email</label>
                </div>
                <div class="form-floating">
                    <input type="password" class="form-control" name="password" id="floatingPassword" placeholder="Password">
                    <label for="floatingPassword">Password</label>
                </div>
            
                <div class="form-check text-start my-3">
                    <input class="form-check-input" type="checkbox" value="remember-me" id="flexCheckDefault">
                    <label class="form-check-label" for="flexCheckDefault">
                        Remember me
                    </label>
                </div>
                <div class="response my-2"></div>
                <button class="btn btn-primary w-100 py-2" type="submit">Sign in</button>
                <p class="mt-5 mb-3 text-body-secondary">Â© 2024</p>
            </form>
        </div>
    </div>
</Layout>

<script is:inline src="/scripts/login.js"></script>